<!DOCTYPE html>
<html>
<head>
  <title>Ideabox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="flash"><%= flash.notice %></p>

<%= yield %>
  <br>
  <br>
  <% if current_user %>
    <%= link_to "Logout", logout_path, method: :delete %>
  <% end %>

</body>
</html>
